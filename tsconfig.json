{
  "compilerOptions": {
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types", // 默认值
      "src/types"
    ],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths":{
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite/**/*.ts",
    "mock/**/*.ts",
    "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
